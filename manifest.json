{
  "name": "Fiverr-Crawler",
  "description" : "Fiverr Crawler",
  "version": "2020.0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Fiverr-Crawler",
    "default_icon": "./img/fiverr-crawler_16.png"
  },
  "icons": {
    "16": "./img/fiverr-crawler_16.png",
    "32": "./img/fiverr-crawler_32.png",
    "64": "./img/fiverr-crawler_64.png",
    "128": "./img/fiverr-crawler_128.png",
    "256": "./img/fiverr-crawler_256.png"
  },
  "background" : {
    "scripts" : ["./js/hot-reload.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.fiverr.com/*",
        "https://www.fiverr.com/*"
      ],
      "all_frames": false,
      "js": [
        "./js/content.js"
      ],
      "css": [
        "./css/popup.css",
        "./css/content.css"
      ],
      "match_about_blank": true
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "geolocation",
    "https://*.heb.com/*",
    "https://*.target.com/*",
    "https://*.costco.com/*",
    "https://*.walmart.com/*",
    "*://*.shuppman.com/*",
    "https://*.gstatic.com/*",
    "https://www.googletagmanager.com/gtag/js?l=dataLayer",
    "https://*.googleapis.com/*",
    "https://maps.googleapis.com/maps/api/js",
    "https://maps.google.com/*",
    "https://maps.googleapis.com/*"
  ],
  "web_accessible_resources": [
    "./js/content.js",
    "./css/content.css",
    "./js/firebase-app.js",
    "./js/firebase-auth.js",
    "./js/firebase-firestore.js",
    "./js/firebase-analytics.js",
    "https://www.googletagmanager.com/gtag/js?l=dataLayer",
    "https://*.googleapis.com/*",
    "https://maps.googleapis.com/maps/api/js"
  ],
  "content_security_policy": "script-src 'self' https://www.googletagmanager.com/gtag/js https://maps.googleapis.com; object-src 'self'"
}
